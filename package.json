{
  "name": "@t-isoyama/exceljs-enhanced",
  "version": "4.4.0-enhanced.0",
  "description": "Excel Workbook Manager - Read and Write xlsx and csv Files.",
  "private": false,
  "license": "MIT",
  "author": {
    "name": "Guyon Roche",
    "email": "guyon@live.com"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/t-isoyama/exceljs-enhanced.git"
  },
  "engines": {
    "node": ">=22.0.0"
  },
  "main": "./excel.js",
  "browser": "./dist/exceljs.min.js",
  "types": "./index.d.ts",
  "files": [
    "dist",
    "lib",
    "excel.js",
    "LICENSE",
    "README.md",
    "README_zh.md",
    "index.ts",
    "index.d.ts"
  ],
  "scripts": {
    "test": "npm run test:full",
    "test:full": "npm run build && npm run test:cleanup && npm run test:unit && npm run test:integration && npm run test:end-to-end",
    "test:version": "npm run build && npm run test:cleanup && npm run test:unit && npm run test:integration && npm run test:end-to-end && npm run test:dist",
    "test:cleanup": "rm -f spec/out/wb.test.xlsx test.xlsx",
    "test:unit": "vitest run spec/unit",
    "test:integration": "vitest run spec/integration",
    "test:end-to-end": "vitest run spec/end-to-end",
    "test:typescript": "vitest run spec/typescript",
    "test:dist": "vitest run spec/dist",
    "test:watch": "vitest watch",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest run --coverage",
    "test:manual": "node spec/manual/app.js",
    "clean-build": "npm run clean && npm run build",
    "lint": "eslint --format node_modules/eslint-friendly-formatter .",
    "lint:fix": "eslint --fix .",
    "lint:staged": "lint-staged",
    "clean": "rm -rf build/ && rm -rf dist",
    "benchmark": "node --expose-gc benchmark",
    "benchmark:debug": "node --expose-gc --inspect-brk --trace-deopt benchmark",
    "build": "node scripts/build.js",
    "install-build": "npm install && npm run build",
    "preversion": "npm run clean && npm run build && npm run test:version",
    "postversion": "git push --no-verify && git push --tags --no-verify",
    "prepare": "husky"
  },
  "lint-staged": {
    "*.js": [
      "eslint --format node_modules/eslint-friendly-formatter"
    ]
  },
  "keywords": [
    "xlsx",
    "json",
    "csv",
    "excel",
    "font",
    "border",
    "fill",
    "number",
    "format",
    "number format",
    "alignment",
    "office",
    "spreadsheet",
    "workbook",
    "defined names",
    "data validations",
    "rich text",
    "in-cell format",
    "outlineLevel",
    "views",
    "frozen",
    "split",
    "pageSetup"
  ],
  "dependencies": {
    "dayjs": "^1.11.18",
    "fast-csv": "^5.0.0",
    "fflate": "^0.8.2",
    "saxes": "^6.0.0"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "@vitest/coverage-v8": "^4.0.5",
    "@vitest/ui": "^4.0.5",
    "axios": "^1.7.0",
    "browserify": "^17.0.0",
    "esbuild": "^0.25.11",
    "eslint": "^8.57.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-prettier": "^10.0.0",
    "eslint-friendly-formatter": "^4.0.1",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-node": "^11.1.0",
    "express": "^4.16.4",
    "husky": "^9.0.0",
    "lint-staged": "^15.0.0",
    "sax": "^1.2.4",
    "typescript": "^5.6.0",
    "vitest": "^4.0.5"
  }
}
